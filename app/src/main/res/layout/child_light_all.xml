<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">
    <ImageView
        android:id="@+id/all_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_checkbox_nor"
        android:paddingLeft="15dp"
        android:paddingRight="11dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_centerVertical="true"
        />

    <RelativeLayout
        android:id="@+id/all_to_document"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:background="@drawable/lighting_document_shape"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/list_file"
            android:text="归档"
            android:drawablePadding="3dp"
            android:textColor="@color/lighting_gray_dark"
            android:gravity="center"
            android:textSize="11sp"/>
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/all_cb"
        android:layout_toLeftOf="@id/all_to_document"
        android:gravity="center_vertical"
        android:layout_centerVertical="true">
        
        <TextView
            android:id="@+id/all_child_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lighting_black"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="登录后可以给好友发提醒哦"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/all_child_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lighting_red"
            android:textSize="10sp"
            tools:text="上午12:00"/>

    </LinearLayout>

</RelativeLayout>